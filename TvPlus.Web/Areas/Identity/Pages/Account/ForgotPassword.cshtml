@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "رمز عبور خود را فراموش کرده اید؟";
}
<div class="mb-20">
    <h3>رمز عبور خود را فراموش کرده اید؟</h3>
    <div class="text-muted font-weight-bold">برای بروز رسانی رمز عبور ایمیل خود را وارد کنید</div>
</div>
        <form method="post" class="form fv-plugins-bootstrap fv-plugins-framework" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-10 fv-plugins-icon-container">
                <input asp-for="Input.Email" class="form-control h-auto form-control-solid py-4 px-8" placeholder="ایمیل" autocomplete="off" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-wrap flex-center mt-10">
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-secondary font-weight-bold px-9 py-4 my-3 mx-2">بازگشت</a>
                <input type="submit" value="ارسال" class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-2" />
            </div>
        </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
