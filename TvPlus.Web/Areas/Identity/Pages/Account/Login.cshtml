@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="login-signin">
    <div class="mb-20">
        <h3>ورود به پنل مدیریت</h3>
        <div class="text-muted font-weight-bold">برای ورود به پنل اطلاعات خود را وارد کنید</div>
    </div>
    <form id="account" method="post" class="form" role="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-5">
            <input asp-for="Input.Username" class="form-control h-auto form-control-solid py-4 px-8" placeholder="نام کاربری" autocomplete="off" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            <input asp-for="Input.Password" class="form-control h-auto form-control-solid py-4 px-8" placeholder="رمز عبور" type="password" autocomplete="off" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group d-flex flex-wrap justify-content-between align-items-center">
            <div class="checkbox-inline">
                <label asp-for="Input.RememberMe" class="checkbox m-0 text-muted">
                    <input asp-for="Input.RememberMe" />
                    <span class="ml-2"></span>
                    مرا به خاطر بسپار
                </label>
            </div>
            <a asp-area="Identity" asp-page="/Account/ForgotPassword" id="kt_login_forgot" class="text-muted text-hover-primary">رمز عبور خود را فراموش کرده اید؟</a>
        </div>
        <input class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-4" type="submit" value="ورود" />
    </form>
</div>
<style>

</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
