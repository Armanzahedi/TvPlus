@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<div class="mb-20">
    <h3>بروز رسانی رمز عبور</h3>
    <div class="text-muted font-weight-bold">برای بروز رسانی رمز عبور ایمیل خود و رمز عبور جدید را وارد کنید</div>
</div>
<form method="post" class="form fv-plugins-bootstrap fv-plugins-framework" role="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Input.Code" type="hidden" />
    <div class="form-group mb-10 fv-plugins-icon-container">
        <input asp-for="Input.Email" class="form-control h-auto form-control-solid py-4 px-8" placeholder="ایمیل" autocomplete="off" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-10 fv-plugins-icon-container">
        <input asp-for="Input.Password" type="password" class="form-control h-auto form-control-solid py-4 px-8" placeholder="رمز عبور جدید" autocomplete="off" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group mb-10 fv-plugins-icon-container">
        <input asp-for="Input.ConfirmPassword" type="password" class="form-control h-auto form-control-solid py-4 px-8" placeholder="تکرار رمز عبور جدید" autocomplete="off" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group d-flex flex-wrap flex-center mt-10">
        <input type="submit" value="ارسال" class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-2" />
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
