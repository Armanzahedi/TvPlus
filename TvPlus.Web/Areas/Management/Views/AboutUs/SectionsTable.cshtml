@model List<TvPlus.Core.Models.AboutUsSection>
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">عنوان</th>
        <th scope="col">توضیحات</th>
        <th scope="col">ویرایش</th>
    </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model.ElementAtOrDefault(i);
        if (item != null)
        {
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <a class='btn btn-sm btn-clean btn-icon mr-2' onclick="openModal('/Management/AboutUs/EditSection/@item.Id')">
                        <i class='far fa-edit text-primary'></i>
                    </a>
                </td>
            </tr>    
        }
    }
    </tbody>
</table>