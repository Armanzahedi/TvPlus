@model TvPlus.Infrastructure.ViewModels.EditCommentViewModel

<input type="hidden" id="title" value="افزودن کامنت" />

<form asp-action="Save" method="post" id="form" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CenterId" value="@ViewBag.CenterId" />
    <div class="form-group">
        <label asp-for="Message" class="control-label col-md-1">نظر</label>
        <div class="col-md-11">
            <textarea asp-for="Message" class="form-control" required="required"  rows="5"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div style="float:left">
            <input type="submit" value="ثبت" class="btn btn-primary mr-2" />
        </div>
    </div>
</form>
<script>
    $.validator.unobtrusive.parse("#form");
</script>