<!DOCTYPE html>
<html lang="en" direction="rtl" dir="rtl" style="direction: rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/favicon.ico">
    <title>@ViewBag.Title - TvPlus Management</title>
    @*<link rel="stylesheet" href="/management/bundle.css" />*@

    <link href="~/management/myStyle.css" rel="stylesheet" />

    <link href="~/management/css/themes/layout/header/base/dark.rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/management/css/themes/layout/header/menu/dark.rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/management/css/themes/layout/brand/dark.rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/management/css/themes/layout/aside/dark.rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/management/plugins/global/plugins.bundle.rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/management/plugins/custom/datatables/datatables.bundle.rtl.css" rel="stylesheet" />
    <link href="~/management/css/style.bundle.rtl.css" rel="stylesheet" type="text/css" />


    @RenderSection("Header", required: false)
    @*<script src="/management/bundle.js"></script>*@

    <script src="~/management/plugins/global/plugins.bundle.js"></script>
    <script src="~/management/js/scripts.bundle.js"></script>
    <script src="~/management/js/pages/widgets.js"></script>

</head>
<body id="kt_body"
      class="header-fixed header-mobile-fixed aside-enabled aside-fixed aside-minimize-hoverable">
    <!--begin::Main-->
    <!--begin::Header Mobile-->
    <div id="kt_header_mobile"
         class="header-mobile align-items-center header-mobile-fixed">
        <!--begin::Logo-->
        <a href="/Admin/Dashboard">
            <img alt="Logo" src="/logo.png" width="95" />
        </a>
        <!--end::Logo-->
        <!--begin::Toolbar-->
        <div class="d-flex align-items-center">
            <!--begin::Aside Mobile Toggle-->
            <button class="btn p-0 burger-icon burger-icon-left"
                    id="kt_aside_mobile_toggle">
                <span></span>
            </button>
            <!--end::Aside Mobile Toggle-->
            <!--begin::Topbar Mobile Toggle-->
            <button class="btn btn-hover-text-primary p-0 ml-2"
                    id="kt_header_mobile_topbar_toggle">
                <span class="svg-icon svg-icon-xl">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         xmlns:xlink="http://www.w3.org/1999/xlink"
                         width="24px"
                         height="24px"
                         viewBox="0 0 24 24"
                         version="1.1">
                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                            <polygon points="0 0 24 0 24 24 0 24" />
                            <path d="M12,11 C9.790861,11 8,9.209139 8,7 C8,4.790861 9.790861,3 12,3 C14.209139,3 16,4.790861 16,7 C16,9.209139 14.209139,11 12,11 Z"
                                  fill="#000000"
                                  fill-rule="nonzero"
                                  opacity="0.3" />
                            <path d="M3.00065168,20.1992055 C3.38825852,15.4265159 7.26191235,13 11.9833413,13 C16.7712164,13 20.7048837,15.2931929 20.9979143,20.2 C21.0095879,20.3954741 20.9979143,21 20.2466999,21 C16.541124,21 11.0347247,21 3.72750223,21 C3.47671215,21 2.97953825,20.45918 3.00065168,20.1992055 Z"
                                  fill="#000000"
                                  fill-rule="nonzero" />
                        </g>
                    </svg><!--end::Svg Icon-->
                </span>
            </button>
            <!--end::Topbar Mobile Toggle-->
        </div>
        <!--end::Toolbar-->
    </div>
    <!--end::Header Mobile-->
    <div class="d-flex flex-column flex-root">
        <!--begin::Page-->
        <div class="d-flex flex-row flex-column-fluid page">
            <!--begin::Aside-->
            @*<partial name="_NavbarPartial" />*@
            @await Component.InvokeAsync("NavigationMenu")
            <!--end::Aside-->
            <!--begin::Wrapper-->
            <div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
                <!--begin::Header-->
                <partial name="_HeaderPartial" />
                <!--end::Header-->
                <!--begin::Content-->
                <div class="content d-flex flex-column flex-column-fluid"
                     id="kt_content">
                    <!--begin::Entry-->
                    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
                        <div class="px-5">
                            @RenderBody()
                        </div>
                    </div>
                    <!--end::Entry-->
                </div>
                <!--end::Content-->
                <!--begin::Footer-->
                <partial name="_FooterPartial" />
                <div class="loading" id="loading" style="display: none"></div>

                <!--end::Footer-->
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Page-->
    </div>
    <!--end::Main-->
    <!-- begin::User Panel-->
    @await Component.InvokeAsync("UserInfo")
    <!-- end::User Panel-->
    <!--begin::Scrolltop-->
    <partial name="_ScrollToTopPartial" />
    <!--end::Scrolltop-->
    <!-- Modal -->
    <partial name="_ModalPartial" />
    <!-- Modal -->
    <!--begin::Global Config(global config for global JS scripts)-->
    <script src="~/management/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="/management/myScripts.js"></script>
    <partial name="_ValidationScriptsPartial" />

    @RenderSection("Scripts", required: false)
</body>
</html>
