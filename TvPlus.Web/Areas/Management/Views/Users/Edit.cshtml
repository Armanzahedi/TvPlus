@model TvPlus.Infrastructure.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "کاربران";
}
<input type="hidden" id="nav_active" value="auth_control">
<input type="hidden" id="nav_item_active" value="users">

<div class="col-lg-12">
    <div class="card card-custom gutter-b">
        <div class="card-header">
            <h3 class="card-title">
                ویرایش کاربر
            </h3>
        </div>
        <form method="post" id="form" enctype="multipart/form-data">
            <div class="container" style="margin-top:20px">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="Avatar"/>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label "></label>
                            <div class="col-md-10">
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Information" class="control-label"></label>
                            <div class="col-md-10">
                                <textarea asp-for="Information" class="form-control"></textarea>
                                <span asp-validation-for="Information" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="col-label">تصویر</label>
                            <div class="col-lg-6 col-md-12 col-sm-12">
                                <div class="image-input image-input-outline" id="user-avatar">
                                    <div class="image-input-wrapper" style="background-image: url(/UploadedFiles/UserAvatars/@Model?.Avatar)"></div>

                                    <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="change" data-toggle="tooltip" title="" data-original-title="آپلود تصویر">
                                        <i class="fa fa-pen icon-sm text-muted"></i>
                                        <input type="file" name="UserAvatar" accept=".png, .jpg, .jpeg" />
                                        <input type="hidden" name="user-avatar_remove" />
                                    </label>

                                    <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="حذف تصویر">
                                        <i class="ki ki-bold-close icon-xs text-muted"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <a style="margin-right: 15px" href="javascript:void(0)" class="btn btn-success" onclick="btnResetToDefaultPassword('@Model.Id')">بازنشانی به رمز عبور پیشفرض</a>

                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Index")" class="btn btn-secondary">انصراف</a>
                <input type="submit" value="ثبت" class="btn btn-primary mr-2" />
            </div>
        </form>
    </div>
</div>
<style>
    .image-input .image-input-wrapper {
        width: 200px;
        height: 200px;
        border-radius: 100%
    }
</style>
@section Scripts {
    <script>
        new KTImageInput('user-avatar');
    </script>
    <script>
        function btnResetToDefaultPassword(id) {
            if (confirm('آیا اطمینان دارید؟')) {
                $.post("/Admin/Users/ResetPasswordToDefault/" + id,
                    function(result) {
                        location.href = "/Admin/Users";
                    });
            }
        }
    </script>
}