@model List<TvPlus.Infrastructure.ViewModels.PostViewModel>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="section__title"> آخرین خبر</h2>
        </div>

        @foreach (var item in Model)
        {
            <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
                <div class="card">
                    <div class="card__cover">
                        <img src="~/UploadedFiles/Images/@item.Image" alt="" />
                        <a href="/Post/@item.Id" class="card__play">
                            <i class="icon ion-ios-play"></i>
                        </a>
                    </div>
                    <div class="card__content">
                        <h3 class="card__title">
                            <a href="/Post/@item.Id">
                                @item.Title
                            </a>
                        </h3>
                        <span class="card__category">
                            @*<a href="#">نیما اسلامی</a>*@
                            <a href="/Post/@item.Id">@item.PublishDate</a>
                        </span>
                        <span class="card__rate"><i class="icon ion-ios-eye"></i>@item.ViewCount بازدید</span>
                    </div>
                </div>
            </div>
        }

        <div class="col-12">
            <a href="/Posts" class="section__btn">بیشتر</a>
        </div>
    </div>
</div>