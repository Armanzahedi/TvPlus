                <h2 class="home__title" style="padding-right: 0; font-size: 25px"><b>پیشنهاد </b> ویژه </h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="owl-carousel-top owl-carousel home__carousel">
                @for (int i = 0; i < Model.Count; i+=2)
                {
                    <div class="item">
                        <div class="card card--big" style="margin-bottom: 5px">
                            <div class="card__cover">
                                <img src="~/UploadedFiles/Images/@Model[i].Image" alt=""/>
                                <a href="/Post/@Model[i].Id" class="card__play">
                                    <i class="icon ion-ios-play"></i>
                                </a>
                            </div>
                            <div class="card__content">
                                <h3 class="card__title">
                                    <a href="/Post/@Model[i].Id">
                                        @Model[i].ShortTitle
                                    </a>
                                </h3>
                                <span class="card__category">
                                    <a href="/Post/@Model[i].Id">@Model[i].PublishDate</a>
                                </span>
                                <span class="card__rate">
                                    <i class="icon ion-ios-eye"></i>@Model[i].ViewCount بازدید
                                </span>
                            </div>
                        </div>
                        @if (Model.ElementAtOrDefault(i + 1) != null)
                        {
                            <div class="card card--big" style="margin-bottom: 5px">
                                <div class="card__cover">
                                    <img src="~/UploadedFiles/Images/@Model[i+1].Image" alt=""/>
                                    <a href="/Post/@Model[i+1].Id" class="card__play">
                                        <i class="icon ion-ios-play"></i>
                                    </a>
                                </div>
                                <div class="card__content">
                                    <h3 class="card__title">
                                        <a href="/Post/@Model[i+1].Id">
                                            @Model[i+1].ShortTitle
                                        </a>
                                    </h3>
                                    <span class="card__category">
                                        <a href="/Post/@Model[i+1].Id">@Model[i+1].PublishDate</a>
                                    </span>
                                    <span class="card__rate">
                                        <i class="icon ion-ios-eye"></i>@Model[i+1].ViewCount بازدید
                                    </span>
                                </div>
                            </div>
                        }
                    </div> 
                }
